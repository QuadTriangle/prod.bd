<section class="py-20 bg-gray-50">
  <div class="max-w-4xl mx-auto px-6">
    <h2 class="text-4xl font-bold text-center mb-12">Quick Install</h2>

    <div class="bg-white rounded-lg shadow-lg p-8">
      <div class="flex gap-4 mb-6 border-b">
        <button
          class="tab-button cursor-pointer border-green-600 px-6 py-3 font-semibold hover:text-gray-900 border-b-2 "
          data-tab="linux"
        >
          Linux
        </button>
        <button
          class="tab-button cursor-pointer px-6 py-3 font-semibold text-gray-600 hover:text-gray-900 border-b-2 border-transparent"
          data-tab="macos"
        >
          macOS
        </button>
        <button
          class="tab-button cursor-pointer px-6 py-3 font-semibold text-gray-600 hover:text-gray-900 border-b-2 border-transparent"
          data-tab="windows"
        >
          Windows
        </button>
      </div>

      <div class="tab-content hidden" data-content="macos">
        <div class="bg-gray-900 text-green-400 p-6 rounded-lg font-mono">
          <code>curl -fsSL https://prod.bd/install | bash</code>
        </div>
        <p class="mt-4 text-gray-600">
          Or install via Homebrew:
        </p>
        <div class="bg-gray-900 text-green-400 p-6 rounded-lg font-mono mt-2">
          <code>brew install prodbd</code>
        </div>
      </div>

      <div class="tab-content" data-content="linux">
        <div class="bg-gray-900 text-green-400 p-6 rounded-lg font-mono">
          <code>curl -fsSL https://prod.bd/install | bash</code>
        </div>
        <p class="mt-4 text-gray-600">
          Or download the binary directly from <a href="https://github.com/quadtriangle/prod.bd/releases" class="text-green-600 hover:underline">GitHub Releases</a>
        </p>
      </div>

      <div class="tab-content hidden" data-content="windows">
        <div class="bg-gray-900 text-green-400 p-6 rounded-lg font-mono">
          <code>irm https://prod.bd/install.ps1 | iex</code>
        </div>
        <p class="mt-4 text-gray-600">
          Or download the .exe from <a href="https://github.com/quadtriangle/prod.bd/releases" class="text-green-600 hover:underline">GitHub Releases</a>
        </p>
      </div>
    </div>
  </div>
</section>

<script>
  const buttons = document.querySelectorAll('.tab-button');
  const contents = document.querySelectorAll('.tab-content');

  // Set initial active tab
  buttons[0].classList.add('border-green-600', 'text-green-600');

  buttons.forEach(button => {
    button.addEventListener('click', () => {
      const tab = button.getAttribute('data-tab');

      // Remove active state from all buttons
      buttons.forEach(btn => {
        btn.classList.remove('border-green-600', 'text-green-600');
        btn.classList.add('border-transparent', 'text-gray-600');
      });

      // Add active state to clicked button
      button.classList.remove('border-transparent', 'text-gray-600');
      button.classList.add('border-green-600', 'text-green-600');

      // Hide all content
      contents.forEach(content => {
        content.classList.add('hidden');
      });

      // Show selected content
      const selectedContent = document.querySelector(`[data-content="${tab}"]`);
      if (selectedContent) {
        selectedContent.classList.remove('hidden');
      }
    });
  });
</script>

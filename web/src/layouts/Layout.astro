---
import "../styles/global.css";

interface Props {
  title: string;
  description?: string;
}

const {
  title,
  description = "Expose your local development servers to the internet with a single command. Fast, secure, and open source HTTP tunnels powered by Cloudflare.",
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site ?? "https://prod.bd");
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href="/favicon.ico" type="image/x-icon" />
    <link rel="canonical" href={canonicalURL.href} />
    <meta name="description" content={description} />
    <meta name="robots" content="index, follow" />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonicalURL.href} />
    <meta property="og:site_name" content="prod.bd" />
    <meta property="og:image" content={new URL("/logo.png", canonicalURL.origin).href} />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={new URL("/logo.png", canonicalURL.origin).href} />

    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
